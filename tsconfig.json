{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2022",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@library/*": ["library/*"],
      "@assets/*": ["assets/*"],
      "@modules/*": ["modules/*"],
      "@constants": ["modules/constants"],
      "@handlers": ["modules/handlers"],
      "@helpers": ["modules/helpers"],
      "@handlers/*": ["modules/handlers/*"],
      "@services": ["modules/services"],
      "@services/*": ["modules/services/*"],
      "@store/*": ["modules/store/*"],
      "@types": ["modules/types"],
      "@utils": ["modules/utils"],
      "@view/*": ["modules/view/*"],
    }
  },
  "exclude": ["node_modules", "test", "**/*.spec.ts", "**/*.test.ts"]
}
