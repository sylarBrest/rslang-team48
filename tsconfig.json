{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2022",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "test", "**/*.spec.ts", "**/*.test.ts"]
}
